{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "Liferay Data Studio",
    "version": "0.1.0",
    "identifier": "com.liferay.data.studio",
    "build": {
        "beforeDevCommand": "TAURI_ENV_PROXY_BASE_URL=http://localhost:2027 bun run dev",
        "beforeBuildCommand": "TAURI_ENV_PROXY_BASE_URL=http://localhost:2027 bun run build",
        "devUrl": "http://localhost:2026",
        "frontendDist": "../build/vite"
    },
    "app": {
        "windows": [
            {
                "title": "Liferay Data Studio",
                "width": 800,
                "height": 600,
                "resizable": true,
                "fullscreen": false
            }
        ],
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ]
    }
}
