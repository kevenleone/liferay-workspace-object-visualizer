{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "object-visualizer",
    "version": "0.1.0",
    "identifier": "com.object.visualizer",
    "build": {
        "frontendDist": "../build/vite",
        "devUrl": "http://localhost:5173",
        "beforeDevCommand": "bun run dev",
        "beforeBuildCommand": "TAURI_BUILD=true bun run build"
    },
    "app": {
        "windows": [
            {
                "title": "Object Visualizer",
                "width": 800,
                "height": 600,
                "resizable": true,
                "fullscreen": false
            }
        ],
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ]
    }
}
